<html lang="en">



<body>
  <%- include("./partials/nav.ejs") %>

    <div>
      <h2>All Employees</h2>

      <% if (employees.length> 0) { %>
        <table>
          <tr>
            <th>Name</th>
            <th>Position</th>
            <th colspan="3">Action</th>
          </tr>
          <% employees.forEach(emp=> { %>
            <tr>
              <td>
                <%= emp.UserName %>
              </td>
              <td>
                <%= emp.Type %>
              </td>
              <td>
                <a href="/admin/emp/<%= emp.id %>">View More</a>
              </td>
              <td>
                <% if (emp.Type==='client' ){ %>
                  <a href="/admin/toAdmin/<%= emp.id %>">Make Admin</a>
                  <% } else{ %>
                    <a href="/admin/toClient/<%= emp.id %>">Make Client</a>
                    <% } %>
              </td>
              <td>
                <a href="/admin/delete/<%= emp.Image %>/<%= emp.id %>">Delete</a>
              </td>
            </tr>
            <% }) %>
        </table>
        <% } else { %>
          <p>There are no employees to display...</p>
          <% } %>

    </div>

</body>

</html>